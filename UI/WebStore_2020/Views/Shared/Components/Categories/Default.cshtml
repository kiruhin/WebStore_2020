@model WebStore.DomainNew.ViewModels.CategoryCompleteViewModel

<h2>Категории</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-products-->

    @foreach (var parentCategory in Model.Categories)
    {
        if (parentCategory.ChildCategories.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian"
                           href="#@parentCategory.Name.ToLower()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @parentCategory.Name
                        </a>
                    </h4>
                </div>
                <div id="@parentCategory.Name.ToLower()"
                     class="panel-collapse
                        collapse @(parentCategory.Id == Model.CurrentParentCategoryId ? "in":null)">
                    <div class="panel-body">
                        <ul>
                            @foreach (var childCategory in parentCategory.ChildCategories)
                            {
                                <li @(childCategory.Id == Model.CurrentCategoryId ? "class=active" : null)>
                                    <a asp-controller="Catalog"
                                       asp-action="Shop"
                                       asp-route-categoryId="@childCategory.Id">
                                        @childCategory.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            var isActiveCssClass = (parentCategory.Id == Model.CurrentCategoryId) ? "active" : "";

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title @isActiveCssClass">
                        <a asp-controller="Catalog"
                           asp-action="Shop"
                           asp-route-categoryId="@parentCategory.Id">
                            @parentCategory.Name
                        </a>
                    </h4>
                </div>
            </div>
        }
    }

</div><!--/category-products-->
